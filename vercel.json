{
  "installCommand": "npm install --legacy-peer-deps",
  "buildCommand": "mkdir -p .next/lock && echo '{}' > .next/lock/lock.json && npm run build",
  "env": {
    "ESLINT_NO_DEV_ERRORS": "true"
  },
  "framework": "nextjs",
  "functions": {
    "app/api/**/*.ts": {
      "includeFiles": "db/migrations/**"
    }
  }
}

